<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="2dp"
    android:elevation="6dp"
    android:padding="20dp"
    android:background="@drawable/white_border_radius_noborder"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <ImageView
            android:id="@+id/companyLogo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:padding="20dp"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/pngtoandroid" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome da empresa"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/black"

            />

        <TextView
            android:id="@+id/textAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:text="EndereÃ§o da empresa"
            android:textColor="@color/darkGray"
            />
        <TextView
            android:id="@+id/textPrimaryTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:text="Telefone da empresa"
            android:textColor="@color/darkGray"
            />
        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:text="Email da empresa"
            android:textColor="@color/darkGray"
            />
        <TextView
            android:id="@+id/textWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:text="Site da empresa"
            android:textColor="@color/darkGray"
            />
    </LinearLayout>

</LinearLayout>