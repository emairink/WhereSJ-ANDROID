<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CompanySignUp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/left_blur_border_radius">


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="*Nome fantasia"
            />
            <EditText
                android:id="@+id/editText_fantasia"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:hint="ex: Supermercado São João"
                android:layout_height="50dp"/>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
              android:textSize="12sp"
            android:text="*Endereço (Se trabalhar apenas com entregas, digite 'Delivery')"
            />
            <EditText
                android:id="@+id/editText_endereco"
                android:singleLine="true"
                android:hint="ex: Rua Sete, 111 - Colonia,  ou 'Delivery'"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="Telefone Principal*"
                />
            <EditText
                android:id="@+id/editText_telefone"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:hint="ex: (32) 9999-9999"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="Endereço do site"
                />
            <EditText
                android:id="@+id/editText_website"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:singleLine="true"
                android:hint="ex: https://www.seusite.com.br"
                android:layout_height="50dp"/>


            <TextView
                android:id="@+id/errorTextView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/design_default_color_error"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text=""
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="*Você pode alterar estas informações quando quiser"
                />


            <Button
                android:id="@+id/continue_to_auth"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:onClick="p"
                android:background="@drawable/gray_border_bg"
                android:backgroundTint="@color/backgroundBlue"
                android:padding="15dp"
                android:text="Continuar" />

        </LinearLayout>

    </LinearLayout>


        </LinearLayout>
</FrameLayout>