<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pktstudio.wheresj">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pngtoandroid"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pngtoandroid"
        android:supportsRtl="true"
        android:theme="@style/whereDefault">
        <activity
            android:name=".activities.CompanyInfoEditor"
            android:label="@string/title_activity_company_info_editor"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>

        <activity android:name=".activities.LoggedIn" />
        <activity
            android:name=".activities.Login"
            android:theme="@style/whereBlueStatusBar" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>